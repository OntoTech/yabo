{
  "name": "yabo",
  "version": "0.0.24",
  "description": "Yet Another Bff Option",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=dev nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix --fix-suggestions",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:check": "cross-env NODE_ENV=dev npx mikro-orm migration:check",
    "migration:up": "cross-env NODE_ENV=dev npx mikro-orm migration:up",
    "migration:create": "cross-env NODE_ENV=dev npx mikro-orm migration:create",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@mikro-orm/cli": "^6.5.7",
    "@mikro-orm/core": "^6.5.7",
    "@mikro-orm/migrations": "^6.5.7",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.5.7",
    "@mikro-orm/reflection": "^6.5.7",
    "@mikro-orm/seeder": "^6.5.7",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "helper-fns": "^2.9.3",
    "isomorphic-dompurify": "^2.28.0",
    "joi": "^18.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-stats": "^0.99.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/passport": "^1.0.17",
    "@types/supertest": "^6.0.2",
    "@types/swagger-stats": "^0.95.11",
    "cross-env": "^10.1.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.3",
    "oxlint": "^1.22.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.46.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/common/database/mikro-orm-cli.config.ts",
      "./dist/common/database/mikro-orm-cli.config.js"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": "oxlint"
  }
}
